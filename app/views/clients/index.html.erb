<% if notice %>
  <div class="alert alert-success alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <p id="notice"><%= notice %></p>
  </div>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('labels.client.name') %></th>
      <th>
        <%= link_to t('labels.client.create'), new_client_path, class: 'btn btn-primary pull-right' %>
      </th>
    </tr>
  </thead>

  <tr class="row">
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td>
          <div class="btn-group pull-right">
            <%= link_to t('labels.client.update'), edit_client_path(client), class: 'btn btn-sm btn-default' %>
            <%= link_to t('labels.client.destroy'), client, class: 'btn btn-sm btn-danger', method: :delete, data: {confirm: t('labels.confirm.client')} %>
          </div>
        </td>
      </tr>
    <% end %>
  </tr>
</table>
